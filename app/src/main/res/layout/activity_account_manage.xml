<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.map3dtest.main.AccountManageActivity">
    <LinearLayout
        android:gravity="center"
        android:background="@color/colorPrimaryDarkMap"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="29dp"
            android:layout_height="29dp" />
        <TextView
            android:text="中铁物联网"
            android:textColor="@color/colorLightGreyMap"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/activity_account_manage0"/>
    <!--   需要注意的是TableRow不需要设置宽度layout_width和高度layoutJieight，
         其宽度一定是match_parent，即自动填充父容器，高度一定为wrap_content，即根据内容改变高度。-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:stretchColumns="*">



        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            >
            <LinearLayout
                android:id="@+id/account_home_page_0"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/tab_home"
                    android:layout_width="35dp"
                    android:layout_height="21dp"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="项目管理"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_home_page_1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/tab_news"
                    android:layout_width="35dp"
                    android:layout_height="21dp"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="设备管理"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_home_page_2"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/tab_maintain"
                    android:layout_width="35dp"
                    android:layout_height="21dp"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="设备维护"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_home_page_3"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/tab_account"
                    android:layout_width="35dp"
                    android:layout_height="21dp"/>

                <TextView
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:text="我的账户"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
