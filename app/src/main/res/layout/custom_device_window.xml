<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="159dp"
    android:layout_height="58dp"
    android:background="@color/colorLightGreyMap"
    android:orientation="vertical" >

<!--    为避免字体大小随系统设置改变而导致的字体大小异常，此处使用dp为单位-->
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/device_window_text"
        android:layout_marginTop="4dp"
        android:textSize="13dp"
        android:gravity="center"
        android:textColor="@color/colorBlackMap"
        android:layout_width="159dp"
        android:layout_height="16dp" />
    <!--android:text="Ztnj-01-001"代码中动态设置内容-->
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <Button
            android:id="@+id/device_window_button_0"
            android:text="详情"
            android:textColor="@color/colorLightGreyMap"
            android:textSize="12dp"
            android:background="@drawable/details_button"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentStart="true"
            android:layout_width="47dp"
            android:layout_height="20dp"

            />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="数据"
            android:textSize="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorLightGreyMap"
            android:id="@+id/device_window_button_1"
            android:layout_width="47dp"
            android:layout_height="20dp"
            android:background="@drawable/details_button"
            />

        <Button
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="轨迹"
            android:textSize="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorLightGreyMap"
            android:id="@+id/device_window_button_2"
            android:layout_width="47dp"
            android:layout_height="20dp"
            android:background="@drawable/details_button"
            />
    </RelativeLayout>

    <!-- android:background="@drawable/shapecircle"-->
</LinearLayout>