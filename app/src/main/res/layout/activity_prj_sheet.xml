<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:background="@color/colorPrimaryDarkMap"

        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="29dp"
            android:layout_height="29dp" />
        <TextView
            android:text="中铁物联网"
            android:textColor="@color/colorLightGreyMap"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25.0sp"
        android:layout_marginRight="25.0sp"
        android:layout_marginTop="25.0sp"
        android:stretchColumns="1" >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000">
            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_weight="3"
                android:background="#ffffffff"
                android:gravity="center"
                android:padding="6.0dip"
                android:text="项目名称"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/device_content_0"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="8"
                android:text="陈翔路站工程"
                android:background="#ffffffff"
                android:gravity="center"
                android:textColor="#ff000000" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff000000" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_weight="3"
                android:background="#ffffffff"
                android:gravity="center"
                android:padding="6.0dip"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:text="项目地区"/>

            <TextView
                android:id="@+id/device_content_1"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="8"
                android:background="#ffffffff"
                android:ellipsize="marquee"
                android:gravity="center"
                android:textColor="#ff000000"
                android:text="Ztnj-01-001"/>

        </TableRow>



    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/prjsheet_dev_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25.0sp"
        android:layout_marginRight="25.0sp"
        android:layout_marginTop="25.0sp"
        />
</LinearLayout>