<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.map3dtest.main.DeviceMaintainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/activity_devicemaintain_manage0"/>
    <!--   需要注意的是TableRow不需要设置宽度layout_width和高度layoutJieight，
       其宽度一定是match_parent，即自动填充父容器，高度一定为wrap_content，即根据内容改变高度。-->
    <TableLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:stretchColumns="*">
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            >
            <ImageView
                android:id="@+id/device_home_page_0"
                android:src="@drawable/tab_home"
                android:layout_width="35dp"
                android:layout_height="21dp"/>

            <ImageView
                android:id="@+id/device_home_page_1"
                android:src="@drawable/tab_news"
                android:layout_width="35dp"
                android:layout_height="21dp"/>

            <ImageView
                android:id="@+id/device_home_page_2"
                android:src="@drawable/tab_maintain"
                android:layout_width="35dp"
                android:layout_height="21dp"/>

            <ImageView
                android:id="@+id/device_home_page_3"
                android:src="@drawable/tab_account"
                android:layout_width="35dp"
                android:layout_height="21dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:textSize="10dp"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="项目管理"/>
            <TextView
                android:textSize="10dp"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="设备管理"/>
            <TextView
                android:textSize="10dp"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="设备维护"/>
            <TextView
                android:textSize="10dp"
                android:layout_width="35dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:text="我的账户"/>

        </TableRow>

    </TableLayout>
</RelativeLayout>
